using System;

class Program
{
    static void Main()
    {
        Console.Write("Qual a sua idade? ");
        int idade = int.Parse(Console.ReadLine());

        Console.Write("Você tem carteira de motorista? (sim/não): ");
        string temCarteira = Console.ReadLine().ToLower();

        if (idade > 18 && temCarteira == "sim")
        {
            Console.WriteLine("Você pode dirigir");
        }
        else
        {
            Console.WriteLine("Você não pode dirigir");
        }
    }
}
