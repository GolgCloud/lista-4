using System;

class Program
{
    static void Main()
    {
        Console.Write("Você não deseja cancelar a operação? (sim/não): ");
        string resposta = Console.ReadLine().ToLower(); // Lê a resposta e converte para minúsculas

        if (resposta == "não" || resposta == "nao")
        {
            Console.WriteLine("Por favor, confirme o cancelamento da operação");
        }
        else
        {
            Console.WriteLine("Operação não cancelada.");
        }
    }
}
