using System;

class Program
{
    static void Main()
    {
        Console.Write("Você deseja adicionar açúcar ao seu café? (sim/não): ");
        string respostaAcucar = Console.ReadLine().ToLower();

        Console.Write("Você deseja adicionar leite ao seu café? (sim/não): ");
        string respostaLeite = Console.ReadLine().ToLower();

        if (respostaAcucar == "sim" || respostaLeite == "sim")
        {
            Console.WriteLine("Café com adicional preparado!");
        }
        else
        {
            Console.WriteLine("Você prefere o café sem adicionais.");
        }
    }
}
